  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^8.5.0",
    "better-sqlite3-session-store": "^0.1.0",
    "cuid": "^3.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "iso-639-1": "^3.1.5",
    "openai": "^4.86.2",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "esbuild": "0.25.1",
    "nodemon": "^2.0.15"
  }
